<div id="app" class="row">

  <div class="col-xs-9" v-if="step == 'onboard'">
    <input type="text" id="code" class="form-control" placeholder="Enter the code" autofocus>
    <button @click="findSession">JOIN</button>
  </div>

  <div class="col-xs-9" v-if="step == 'assign_name'">
    <input type="text" id="nickname" class="form-control" placeholder="Enter your nickname"required>
    <button @click="createParticipant">OK</button>
  </div>

  <div class="col-xs-9" v-if="step == 'in_lobby'">
    <p>Waiting for the game to begin</p>
  </div>

  <div class="col-xs-9" v-if="step == 'question'">
    <p>Rendering question with index: {{ question }}</p>
  </div>

</div>

<script>
  window.appConfig = {
    onLoad: function(App) {
      let clientVue = App.initVue();
      clientVue.questionListener();
    }
  };
</script>
